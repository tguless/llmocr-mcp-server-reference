<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="00005-create-mcp-audit-log-table" author="mcp-invoice-server">
        <comment>Create MCP audit log table for tracking all MCP operations</comment>
        
        <createTable tableName="mcp_audit_log" schemaName="mcp_invoice">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(100)"/>
            <column name="session_id" type="VARCHAR(100)"/>
            <column name="operation_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="tool_name" type="VARCHAR(100)"/>
            <column name="resource_uri" type="VARCHAR(500)"/>
            <column name="request_data" type="JSONB"/>
            <column name="response_data" type="JSONB"/>
            <column name="success" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
            <column name="execution_time_ms" type="BIGINT"/>
            <column name="user_agent" type="VARCHAR(500)"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(100)"/>
        </createTable>

        <!-- Foreign key to tenants table -->
        <addForeignKeyConstraint 
            baseTableName="mcp_audit_log" 
            baseTableSchemaName="mcp_invoice"
            baseColumnNames="tenant_id" 
            constraintName="fk_mcp_audit_log_tenant_id"
            referencedTableName="tenants" 
            referencedTableSchemaName="mcp_invoice"
            referencedColumnNames="tenant_id"/>

    </changeSet>

</databaseChangeLog>
